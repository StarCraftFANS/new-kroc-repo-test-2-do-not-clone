#INCLUDE "wiring.module"
#INCLUDE "servos.module"

VAL INT servo.pause IS 2000 :

PROC test.servo ()
  INT pin :
  INT degrees :
  SEQ
    pin := 7
    degrees := 45
    beginSerial (57600)
    serialWrite ("entering servos.module\n")
    addServo( pin )
    setServoPositionInDegrees( pin, degrees )
    delay ( servo.pause )
    setServoPositionInDegrees( pin, degrees + 45 )
    delay ( servo.pause )
    setServoPositionInDegrees( pin, degrees + 100 )
:

PROC main ()
  -- test the servo process
  PAR
    test.servo ()
:
